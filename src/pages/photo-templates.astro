---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Popstar Photo Booths | Raleigh | Durham | Surrounding Areas">
  <main>
    <section style="margin-top: 4em"; class="py-5 text-center bg-light">
        <div class="container">
          <iframe src="https://popstarphotobooths.boothwidget.com/product-category/start-screens/" style="width:100%;height:900px;border:none;"></iframe>
        </div>
      </section>
  </main>
</Layout>

<style>
  .divider-block {
    background-color: black;
    padding: 2rem;
    text-align: center;
  }

  .divider-block .content {
    max-width: 800px;
    margin: 0 auto;
  }

  .divider-block h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .divider-block p {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
  }

  .divider-block a.button:hover {
    background-color: #f1f1f1;
  }
</style>
