---
const navbarItems = [
  { text: "Home", href: "/" },
  { text: "Backdrops", href: "/backdrops"},
  { text: "Templates", href: "/photo-templates"},
  { text: "Start Screens", href: "/start-screens"},
];
---

<nav class="navbar navbar-expand-lg navbar-custom navbar-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="/images/logo-black.png" alt="Logo" />
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        {navbarItems.map((item) => (
          <li class="nav-item" key={item.text}>
            <a class="nav-link" href={item.href}>
              {item.text}
            </a>
          </li>
        ))}
      </ul>
      <a href="https://popstar-photo-booths.checkcherry.com/reservation/event_type" class="btn btn-lg btn-primary ms-3">Book Now</a>
    </div>
    <a href="https://popstar-photo-booths.checkcherry.com/reservation/event_type" class="btn btn-primary get-prices-mobile">Book Now</a>
  </div>
</nav>

<style>
  /* Navbar Styles */
  .navbar {
    background-color: white !important;
    transition: background-color 0.5s ease !important;
    position: fixed !important;
    top: 0 !important;
    width: 100% !important;
    z-index: 1000 !important;
    padding: 1rem 2rem !important;
  }

  .navbar-brand,
  .nav-link {
    color: #000 !important;
    font-family: Lato, sans-serif !important;
    font-weight: 400 !important; /* Thinner font weight */
    font-style: normal !important;
    font-size: 15px !important;
    letter-spacing: 0.15em !important;
    text-transform: uppercase !important;
  }

  .navbar-toggler-icon {
    display: block !important; /* Ensure the hamburger icon is visible */
  }

  .navbar-light .navbar-toggler {
    border-color: rgba(0, 0, 0, 0.1) !important;
  }

  .navbar .navbar-brand img {
    height: 50px !important;
  }

  /* Check Availability button for mobile */
  .get-prices-mobile {
    display: none;
  }

  @media (max-width: 992px) {
    .navbar-toggler {
      display: none !important;
    }
    .collapse.navbar-collapse {
      display: none !important;
    }
    .get-prices-mobile {
      display: inline-block !important;
      margin-left: auto !important;
      font-size: 0.875rem !important; /* Smaller font size */
      padding: 0.375rem 0.75rem !important; /* Adjust padding for better fit */
      max-width: 90%; /* Ensure the button doesn't overflow */
      text-align: center !important;
      white-space: nowrap !important; /* Prevent text wrapping */
    }
  }
</style>
