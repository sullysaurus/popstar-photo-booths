---
const {
  headerText = "LEARN MORE",
  headerTextColor = "white",
  descriptionText = "",
  descriptionTextColor = "#ccc",
  buttonText = "Get Prices",
  buttonTextColor = "white",
  linkUrl = "https://popstar-photo-booths.checkcherry.com/reservation/set_event?event_category_id=17207",
  bgColor = "black",
  topMargin = "100px",
  bottomMargin = "100px"
} = Astro.props;
---

<section class="pb-5" style={`background-color: ${bgColor}; padding-top: ${topMargin}; padding-bottom: ${bottomMargin};`}>
  <div class="container col-xxl-8 px-4">
    <div class="row align-items-center g-5">
      <div class="col-12 text-center">
        <h1 class="fw-bold display-5 mb-3" style={`color: ${headerTextColor};`}>{headerText}</h1>
        {descriptionText && <p class="lead" style={`color: ${descriptionTextColor};`}>{descriptionText}</p>}
        {buttonText && <a href={linkUrl} class="btn btn-lg btn-primary" style={`color: ${buttonTextColor};`}>{buttonText}</a>}
      </div>
    </div>
  </div>
</section>

<style>
  .lead {
    font-size: 1.25rem;
    font-weight: 300;
  }
  .fw-bold {
    font-weight: 700 !important;
  }
  .display-5 {
    font-size: 2.5rem;
  }
  .h3 {
    font-size: 1.75rem;
  }
  img {
    max-width: 100%;
    height: auto;
  }
</style>
