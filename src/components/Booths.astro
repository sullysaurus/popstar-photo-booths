---
const boothOptions = [
  {
    mediaType: 'video',
    mediaSrc: '/images/party.mp4',
    alt: 'The Party Booth',
    title: 'The Party Booth',
    description: 'Our Social Booth is a super fun, drop-off selfie station that includes unlimited text sharing, images, gifs and boomerangs.',
    buttonAction: "https://popstar-photo-booths.checkcherry.com/reservation/set_event?event_type_id=100635"
  },
  {
    mediaType: 'image',
    mediaSrc: '/images/prints.jpeg',
    alt: 'The Popstar Booth',
    title: 'The Popstar Booth',
    description: 'Our Print Booth offers studio lighting, unlimited prints, texting, GIFs, and a friendly booth host.',
    buttonAction: "https://popstar-photo-booths.checkcherry.com/reservation/set_event?event_type_id=84825"
  }
];
---

<section class="py-5">
  <div class="container pb-3">
    <h1 class="fw-bold display-5 py-5 text-center">Choose Your Photo Booth Experience</h1>
    <div class="row row-cols-1 row-cols-md-2 g-3">
      {boothOptions.map((booth) => (
        <div class="col pb-3">
          <div class="card shadow-sm">
            {booth.mediaType === 'video' ? (
              <video src={booth.mediaSrc} class="card-img-top" autoplay muted loop playsinline alt={booth.alt}></video>
            ) : (
              <img src={booth.mediaSrc} class="card-img-top" alt={booth.alt} />
            )}
            <div class="card-body p-4">
              <h2 class="card-title">{booth.title}</h2>
              <p class="card-text">{booth.description}</p>
              <div class="d-flex justify-content-center align-items-center">
                <div class="btn-group">
                  <a href={booth.buttonAction} class="btn btn-lg btn-primary" role="button">Check Availability</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
