---
const {
  imgSrc = '/default/path/to/image.jpg',
  imgAlt = 'Default alt text',
  title = 'Default Title',
  subtitle = 'Default Subtitle',
  description = 'Default description text.',
  highlightColor = '#FFD700',
  customClasses = '',
  backgroundColor = 'transparent', // Customizable background color
  titleColor = '#000', // New prop for title color customization
  subtitleColor = '#fff', // New prop for subtitle color customization
  descriptionColor = '#fff',
  titleFontSize = '3.5rem', // New prop for title font size
  subtitleFontSize = '2.5rem', // New prop for subtitle font size
} = Astro.props;
---

<section class={`py-5 ${customClasses}`} style={`background-color: ${backgroundColor};`}>
  <div class="container col-xxl-8 px-4">
    <div class="row align-items-center g-5 py-5">
      <div class="col-lg-6">
        <div class="text-center text-lg-start">
          <h1
            class="display-5 fw-bold lh-1 mb-3"
            style={`color: ${titleColor}; font-size: ${titleFontSize};`}
          >
            <span class="highlight" style={`background-color: ${highlightColor}`}>{title}</span>
          </h1>
          <h2
            class="subtitle mb-3"
            style={`color: ${subtitleColor}; font-size: ${subtitleFontSize};`}
          >
            {subtitle}
          </h2>
          <p class="lead mb-4" style={`color: ${descriptionColor};`}>{description}</p>
        </div>
      </div>
      <div class="col-12 col-sm-8 col-lg-6">
        <img
          src={imgSrc}
          class="d-block mx-lg-auto img-fluid rounded mb-3"
          alt={imgAlt}
          width="700"
          height="500"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .highlight {
    padding: 0 5px;
  }
  .subtitle {
    font-weight: 400; /* Adjust based on preference */
  }
</style>
